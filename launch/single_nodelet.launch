<launch>

  <!-- Link to the custom libsub (LD_LIBRARY_PATH is searched before ld.so.conf.d, so the custom libusb will be used instead of the system default-->
  <env name="LD_LIBRARY_PATH" value="/opt/mvIMPACT_acquire_libusb:$(env LD_LIBRARY_PATH)" />

  <!-- Node delay for multiple cameras (driver can crash if run multiple times in the same moment) -->
  <arg name="node_start_delay" default="0"/>

  <!-- Device serial number (can be found by rosrun bluefox2 bluefox2_list_cameras -->
  <arg name="device" default="$(optenv BLUEFOX)"/>

  <!-- Camera name (used for node name and topic namespace) -->
  <arg name="camera_name" default="mv_$(arg device)"/>
  <arg name="camera" default="$(arg camera_name)"/>

  <!-- Frame id (used in the header of ROS messages) -->
  <arg name="frame_id" default="$(arg camera)"/>

  <!-- The path to the calibration file -->
  <arg name="calib_url" default="file://$(find mrs_uav_general)/config/camera_calibrations/mv_$(arg device).yaml"/>

  <!--//{ Camera settings (see README.md and cfg/Bluefox2Dyn.cfg for more info-->

  <!-- Frame rate --> 
  <arg name="fps" default="60"/>

  <!-- Auto exposure control -->
  <arg name="aec" default="true"/>

  <!-- Desired brightness 0-255 (only when aec == true) -->
  <arg name="des_grey_value" default="128"/>

  <!-- Upper limit of exposure time (only when aec == true) -->
  <arg name="expose_upper_limit_us" default="100000"/>

  <!-- Auto exposure control speed (0 - slow, 1 - medium, 2 - fast) -->
  <arg name="acs" default="2"/>

  <!-- Exposure time in microseconds (only when aec == false) -->
  <arg name="expose_us" default="10000"/>

  <!-- Auto gain control (aec can change exposure time/gain (true) or only exposure (false) -->
  <arg name="agc" default="true"/>

  <!-- Gain (only when agc == false) -->  
  <arg name="gain_db" default="0.0"/>

  <!-- White balance parameter (0 - tungsten, 1 - halogen, 2 - fluorescent, 3 - daylight, 4 - photo light, 5 - blue sky, 6 - user1, 10 - calibrate) -->
  <arg name="wbp" default="3"/>

  <!-- Pixel format (0 - auto, 1 - raw, 2 - mono8, 9 - mono16, 10 - rgb8, 22 - bgr8) -->
  <arg name="idpf" default="0"/>

  <!-- Mirror the captured image (0 - off, 1 - top down, 2 - left right, 3 - top down and left right -->
  <arg name="mm" default="0"/>

  <!-- Camera binning mode (0 - off, 1 - horizontal, 2 - vertical, 3 - both -->
  <arg name="cbm" default="0"/>

  <!-- Camera trigger mode (0 - continuous, 1 - software, 2-4 - hardware, 5 - stereo master/slave) -->
  <arg name="ctm" default="1"/>

  <!-- Dark current filter (0 - off, 1 - on, 2 - calibrate) -->
  <arg name="dcfm" default="0"/>

  <!-- High dynamic range (0 - off, 1 - on) -->
  <arg name="hdr" default="false"/>

  <!-- Request capture queue count -->
  <arg name="request" default="5"/>
  
<!--//}-->

<!--//{ Compression settings -->
  <!-- Arguments for theora quality, images being compressed into "stream" -->
  <arg name="compressed_jpeg_quality" default="90" />
  <arg name="theora_keyframe_frequency" default="60"  />
  <arg name="theora_target_bitrate" default="50000"  />
  <arg name="theora_quality" default="8"  />
  <arg name="theora_optimize_for" default="0"  />
<!--//}-->

<!--//{ Node settings -->

  <!-- Run in nodelet manager (true) or standalone (false) -->
  <arg name="plugin" default="false"/>
  <arg name="manager" default="bluefox_manager"/>

  <!-- Text output to screen/log -->
  <arg name="output" default="screen"/>

  <!-- Run rectification -->
  <arg name="rectify" default="false"/>

  <!-- Run camera viewer -->
  <arg name="view" default="false"/>

  <!-- Run calibration -->
  <arg name="calib" default="false"/>

  <!-- Calibration settings -->
  <arg name="size" default="8x6"/>
  <arg name="square" default="0.108"/>
<!--//}-->

<!--//{ Nodelet manager/Standalone -->
  <arg unless="$(arg plugin)"
    name="option" value="standalone bluefox2/SingleNodelet"/>

  <arg if="$(arg plugin)"
    name="option" value="load bluefox2/SingleNodelet $(arg manager)"/>
<!--//}-->

<!--//{ Run nodelet-->
  <node pkg="nodelet" type="nodelet" name="$(arg camera)"
    args="$(arg option)" output="$(arg output)" respawn="true" launch-prefix="bash -c 'sleep $(arg node_start_delay); $0 $@' ">
    <param name="identifier" type="string" value="$(arg device)"/>
    <param name="frame_id" type="string" value="$(arg frame_id)"/>
    <param name="camera_name" type="string" value="$(arg camera_name)"/>
    <param name="calib_url" type="string" value="$(arg calib_url)"/>
    <param name="fps" type="double" value="$(arg fps)"/>
    <param name="idpf" type="int" value="$(arg idpf)"/>
    <param name="aec" type="bool" value="$(arg aec)"/>
    <param name="expose_us" type="int" value="$(arg expose_us)"/>
    <param name="agc" type="bool" value="$(arg aec)"/>
    <param name="gain_db" type="double" value="$(arg gain_db)"/>
    <param name="cbm" type="int" value="$(arg cbm)"/>
    <param name="ctm" type="int" value="$(arg ctm)"/>
    <param name="dcfm" type="int" value="$(arg dcfm)"/>
    <param name="hdr" type="bool" value="$(arg hdr)"/>
    <param name="wbp" type="int" value="$(arg wbp)"/>
    <param name="request" type="int" value="$(arg request)"/>
    <param name="mm" type="int" value="$(arg mm)"/>
    <param name="expose_upper_limit_us" type="int" value="$(arg expose_upper_limit_us)"/>
    <param name="des_grey_value" type="int" value="$(arg des_grey_value)"/>
    <param name="acs" type="int" value="$(arg acs)"/>

    <!-- Params for theora quality, images being compressed into "stream" -->
    <param name="image_raw/compressed/jpeg_quality" type="int" value="$(arg compressed_jpeg_quality)" />
    <param name="image_raw/theora/keyframe_frequency" value="$(arg theora_keyframe_frequency)"  />
    <param name="image_raw/theora/target_bitrate" value="$(arg theora_target_bitrate)"  />
    <param name="image_raw/theora/quality" value="$(arg theora_quality)"  />
    <param name="image_raw/theora/optimize_for" value="$(arg theora_optimize_for)"  />
  </node>
<!--//}-->

<!--//{ Run rectification -->
  <group if="$(arg rectify)">
    <arg if="$(arg plugin)"
      name="proc_option" value="load image_proc/rectify $(arg manager)"/>
    <arg unless="$(arg plugin)"
      name="proc_option" value="standalone image_proc/rectify"/>
    <node if="$(arg rectify)"
      pkg="nodelet" type="nodelet" name="rectify_mono" ns="$(arg camera)"
      args="$(arg proc_option)">
      <remap from="image_mono" to="image_raw"/>
      <remap from="image_rect" to="image_rect_mono"/>
    </node>
  </group>
<!--//}-->

<!--//{ Run viewer -->
  <arg name="image" default="image_raw"/>
  <node if="$(arg view)"
    pkg="image_view" type="image_view" name="viewer"
    output="$(arg output)" ns="$(arg camera)" args="image:=$(arg image)">
  </node>
<!--//}-->

<!--//{ Run camera calibration -->
  <group if="$(arg calib)">
    <arg name="pattern" default="chessboard"/>
    <arg name="num_dist_coeff" default="2"/>
    <node pkg="camera_calibration" type="cameracalibrator.py"
      name="calibrator" output="screen"
      args="-p $(arg pattern) -s $(arg size) -q $(arg square)
      -k $(arg num_dist_coeff)
      image:=/$(arg camera)/image_raw camera:=/$(arg camera)">
    </node>
  </group>
<!--//}-->

</launch>
